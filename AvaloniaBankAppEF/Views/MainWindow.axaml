<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaBankAppEF.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaBankAppEF.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaBankAppEF.Views.MainWindow"
        Title="AvaloniaBankAppEF"
		>
	<Window.Background>
		<LinearGradientBrush StartPoint="0%, 0%" EndPoint="0%, 100%">
			<GradientStop Color="{StaticResource WhiteBrush}" Offset="0"/>
			<GradientStop Color="{StaticResource BlueBrush}" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	
        <views:MainView />
	
</Window>
